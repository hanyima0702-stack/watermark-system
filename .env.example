# 数据库配置
DATABASE_URL=postgresql://watermark_user:watermark_pass@localhost:5432/watermark_system
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ClickHouse配置 (审计日志)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=watermark_audit

# 消息队列配置
RABBITMQ_URL=amqp://watermark:watermark123@localhost:5672/
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 对象存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=watermark-files
MINIO_SECURE=false

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# LDAP/SSO配置
LDAP_SERVER=ldap://your-ldap-server:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin-password

# 文件处理配置
MAX_FILE_SIZE_MB=500
MAX_BATCH_FILES=100
TEMP_DIR=/tmp/watermark
UPLOAD_DIR=/data/uploads
OUTPUT_DIR=/data/outputs

# 水印配置
DEFAULT_WATERMARK_OPACITY=0.5
DEFAULT_WATERMARK_FONT_SIZE=12
DEFAULT_WATERMARK_COLOR=#FF0000
WATERMARK_KEY_ID=default-watermark-key

# 性能配置
WORKER_PROCESSES=4
WORKER_THREADS=2
TASK_TIMEOUT_SECONDS=3600
CACHE_EXPIRE_SECONDS=3600

# 监控配置
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=false

# 开发配置
DEBUG=false
TESTING=false
ENVIRONMENT=production

# API配置
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]
RATE_LIMIT_PER_MINUTE=100

# 邮件配置 (用于通知)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp-password
SMTP_TLS=true

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/data/backups